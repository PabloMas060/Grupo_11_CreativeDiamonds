<div id="login-modal" class="header-modal">
    <div class="header-modal-content">
        <form action="/users/login" method="POST" id="login-form">
            <div class="login-titulo">
                <h4>¡Bienvenido de nuevo!</h4>
            </div>

            <div class="login-grupo1">
                <div class="login-grupoA">
                    <label for="email">Email</label>
                    <input type="email" class="form-control  <%= locals.errors && (errors.email && 'is-invalid') %>"
                        name="email" id="email" value="<%= locals.old && (old.email && old.email) %>">
                    <small id="msgError-email" style="color: red;">
                        <%= locals.errors && errors.email ? errors.email.msg : '' %>
                    </small>
                    <input type="checkbox" id="recordarme" name="recordarme">
                    <label for="recordarme">Recordarme</label>
                </div>
                <div class="login-grupoB">
                    <label for="password">Contraseña:</label>
                    <input type="password"
                        class="form-control  <%= locals.errors && (errors.password && 'is-invalid') %>" name="password"
                        id="password">
                    <small id="msgError-password" style="color: red;">
                        <%= locals.errors && errors.password ? errors.password.msg : '' %>
                    </small>
                    <small><a href="#">¿Olvidaste tu contraseña?</a></small>
                </div>
            </div>
            <div class="row">
                <div class="col-6 p-3">
                    <button class="btn btn-primary" type="submit" id="login-button">Iniciar Sesión</button>
                    <p>¿No estás resgistrado? <a href="/users/register">Registrate</a></p>
                </div>
                <div class="col-6">
                    <a class="btn" href="/auth/login/google"><img class="w-25" src="/images/logo-google.png"
                            alt="">
                        <p>Ingresar con Google</p>
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
<script src="/javascripts/validationLogin.js"></script>