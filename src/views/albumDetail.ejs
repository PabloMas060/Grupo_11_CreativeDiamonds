<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head',{ title : 'Detalle de Artista' }) %>
<body class="home__body">

    
        <%- include('partials/header') %>

           
            <section class="section__white">
<h2 class="m-5">Aquí podrás ver toda la información del álbum <b><%= album.title %></b></h2>
                <div class="container">
                    <div class="row justify-content-center g-2">
                        <div class="col-8 col-md-6 mx-auto p-5">
                            <div class="card" style="box-shadow: 1px 5px 25px 10px black;">
                                <img src="/images/albums/<%= album.image %>" class="card-img-top" alt="">
                                <div class="card-body">
                                    <h5 class="card-title"><%= album.title %></h5>
                                    <p class="card-text"><%= album.year %></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Género: <% genres.forEach(genre => { %>
                                     <% if (genre.id === album.genreId) { %>
                                      <%= genre.name %>
                                     <% } %>
                                    <% }) %></li>
                                    <li class="list-group-item"><b>PRECIO:</b> us$ <%= album.price %></li>
                                </ul>
                                <div class="card-body text-center">
                                    <button data-id="<%= album.id %>" id="btn-addCart" class="btn btn-dark">Agregar al carrito</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-8 col-md-4 text-center mt-5">
                            <h4>Lista de canciones:</h4>
                            <ol class="align-items-center text-start">

                                <% tracks.forEach(({id,name},index) => { %>
                                    <li class="mt-3"><p style="text-shadow: 1px 1px 1px black"><%= index+1 %>. <%= name %></p></li>
                                <% }) %>
                            </ol>
                        </div>
                        <div class="col-8 col-md-6 text-center">
                            <p><b>Reseña del álbum:</b></p>
                            <p><%= album.description %></p>
                
                           <!--  <ul>
                                <li><b>Voz principal: </b> Anthony Kiedis</li>
                                <li><b>Guitarra y coros: </b> John Frusciante</li>
                                <li><b>Bajo: </b> Flea</li>
                                <li><b>Batería: </b> Chad Smith</li>
                            </ul> -->
                        </div>
                        <div class="col-8 col-md-6">
                            <button class="btn btn-dark"><a class="text-white" href="/products/artists/detail/<%= album.bandId %>"> Volver al listado de álbums</a></button>
                        </div>
                    </div>
                </div>


            </section>


     


            <!-- Pie de página -->
            <%- include('partials/footer') %>
            <script src="/javascripts/productDetail.js"></script>
        

</body>

</html>